<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/accent_radius_bg"
    android:id="@+id/root_view"
    >
    <com.seki.noteasklite.CustomControl.TintImageView
        android:id="@+id/notice_type_view"
        android:src="@mipmap/ic_stars_white_36dp"
        app:tintColor="@color/colorAccent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dimen_32_dp"
        android:layout_height="@dimen/dimen_32_dp"
        android:padding="@dimen/dimen_4_dp"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        android:layout_marginRight="@dimen/dimen_8_dp"
        android:id="@+id/notice_num_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8_dp"
        android:textSize="@dimen/md_regular_text_size"
        android:textColor="@color/colorAccent"
        android:text="0"/>
</LinearLayout>