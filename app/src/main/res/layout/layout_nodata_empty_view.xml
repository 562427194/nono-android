<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:src="@drawable/ic_launcher_noteasklite2"
            android:layout_width="@dimen/dimen_64_dp"
            android:layout_height="@dimen/dimen_64_dp" />
        <com.seki.noteasklite.CustomControl.TintImageView
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_gravity="center"
            app:tintColor="@color/md_second_color"
            android:src="@drawable/iconfont_disconnect"
            android:layout_width="@dimen/dimen_48_dp"
            android:layout_height="@dimen/dimen_48_dp" />
    </LinearLayout>

    <TextView
        android:layout_margin="@dimen/dimen_16_dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NONo无法连接到服务器，请检查网络"
        android:textSize="@dimen/md_regular_text_size"
        android:textColor="@color/md_second_color"
        />
    <TextView
        android:padding="@dimen/dimen_8_dp"
        android:background="@drawable/accent_radius_soloid_bg"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再试一次"
        android:textSize="@dimen/md_regular_text_size"
        android:textColor="@color/md_text"
        />
</LinearLayout>