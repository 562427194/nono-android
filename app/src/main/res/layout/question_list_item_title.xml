<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center|left"
        android:id="@+id/question_title"
        style="@style/primaryTitle"
        android:maxWidth="@dimen/dimen_192_dp"
        tools:text="问题标题---------------------------------"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        />
    <ImageView
        android:id="@+id/question_offical_state"
        android:layout_marginRight="@dimen/dimen_16_dp"
        android:src="@drawable/nono_official"
        android:layout_marginLeft="@dimen/dimen_4_dp"
        android:layout_width="@dimen/dimen_16_dp"
        android:layout_height="@dimen/dimen_16_dp" />
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"/>

</LinearLayout>