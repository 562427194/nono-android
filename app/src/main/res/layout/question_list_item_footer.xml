<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:paddingRight="@dimen/dimen_16_dp"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.seki.noteasklite.CustomControl.TintImageView
                android:layout_gravity="center"
                android:src="@mipmap/ic_assignment_black_18dp"
                app:tintColor = "@color/md_second_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:id = "@+id/question_raise_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_second_color"
                android:textSize="@dimen/text_size_caption_material"
                android:text="4个月前"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/question_raiser"
            android:layout_gravity="center_vertical"
            tools:text="开发者"
            android:textColor="@color/md_second_color"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.facebook.drawee.view.SimpleDraweeView
            app:placeholderImage="@drawable/nono_default_head"
            android:id="@+id/question_raiser_headimage"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:roundAsCircle="true"
            android:layout_width="@dimen/dimen_24_dp"
            android:layout_height="@dimen/dimen_24_dp" />
    </LinearLayout>