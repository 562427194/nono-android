<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimen_128_dp">
    <android.support.v7.widget.AppCompatImageView
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/vote_up"
        android:layout_margin="@dimen/dimen_32_dp"
        android:src="@mipmap/ic_thumb_up_white_48dp"
        tools:tint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vote_down"
        android:layout_margin="@dimen/dimen_32_dp"
        android:src="@mipmap/ic_thumb_down_white_48dp"
        tools:tint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>