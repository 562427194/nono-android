<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:background="@drawable/accent_radius_bg"
    android:layout_height="wrap_content">
    <com.seki.noteasklite.CustomControl.TintImageView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/vote_flag"
        android:src="@mipmap/ic_arrow_drop_up_white_36dp"
        app:tintColor="@color/colorAccent"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dimen_32_dp"
        android:layout_height="@dimen/dimen_32_dp" />
    <TextView
        android:id="@+id/vote_num"
        android:textColor="@color/colorAccent"
        android:layout_margin="@dimen/dimen_8_dp"
        android:textSize="@dimen/md_regular_text_size"
        android:layout_gravity="center"
        tools:text="999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>