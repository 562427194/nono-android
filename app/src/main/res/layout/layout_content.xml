<android.support.v7.widget.CardView
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:minHeight="56dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bg_image"
            app:placeholderImage="@drawable/banner"
            android:background="@color/md_text"
            app:placeholderImageScaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="196dp" />
        <View
            android:background="@color/image_shadow_color"
            android:layout_width="match_parent"
            android:layout_height="196dp"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center"
            android:id="@+id/real_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_16_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/layout_name"
                    android:textColor="@color/md_text"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    android:text="group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/layout_counts"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:layout_gravity="bottom"
                    android:textColor="@color/md_text"
                    android:text=" 12 Notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/md_text"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:layout_marginBottom="@dimen/dimen_8_dp"
                android:layout_height="1dp"
                android:layout_width="@dimen/dimen_64_dp"
                />
            <TextView
                android:gravity="center"
                android:textColor="@color/md_text"
                android:layout_below="@id/bg_image"
                android:layout_marginRight="@dimen/dimen_32_dp"
                android:layout_marginLeft="@dimen/dimen_32_dp"

                android:id="@+id/layout_newest"
                android:maxLines="4"
                tools:text="newest_note_abstractne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>