<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_2_dp"
    app:cardElevation="@dimen/dimen_4_dp"
    >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_margin="@dimen/dimen_8_dp"
        android:layout_marginRight="@dimen/dimen_4_dp"
        android:layout_width="@dimen/dimen_48_dp"
        android:layout_height="@dimen/dimen_48_dp"
        android:id="@+id/inner_question_answer_raiser_headimg"
        android:scaleType="centerInside"
        fresco:backgroundImage="@drawable/nono_default_head"
        fresco:placeholderImage="@drawable/nono_default_head"
        fresco:roundAsCircle="true"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textColor="@color/md_primary_text"
                android:layout_marginRight="4dp"
                android:textSize="@dimen/text_size_subhead_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inner_question_answer_raiser_name"
                tools:text="未知"
                />
            <TextView
                android:textColor="@color/md_second_color"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:textSize="@dimen/text_size_subhead_material"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:id="@+id/inner_question_answer_raiser_info"
                android:text="loading...loading..."
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>