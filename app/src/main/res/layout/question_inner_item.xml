<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_grey_50">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin_half"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="top"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/question_inner_head_pic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    app:placeholderImage="@drawable/nono_default_head"
                    app:roundAsCircle="false"/>
                <TextView
                    android:id="@+id/vote_num"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/md_primary_highlight_corner_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textSize="8sp"
                    tools:text="1"
                    android:textColor="@color/md_text"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/comment_num"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/md_text"
                    android:background="@drawable/md_primary_highlight_corner_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:gravity="center"
                    android:textSize="8sp"
                    tools:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:id="@+id/question_inner_user_name"
                        android:textSize="@dimen/md_regular_text_size"
                        android:textColor="@color/abc_primary_text_material_light"
                        android:layout_gravity="center_vertical"
                        android:text="用户名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <include layout="@layout/inner_question_list_item_flags"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/question_inner_text"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:text="loading..."
                    android:minLines="1"
                    android:maxLines="3"
                    android:textSize="@dimen/text_size_subhead_material"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/question_inner_image0"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="160dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/question_inner_image1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="160dp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:background="@color/colorDividerLight"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
 </FrameLayout>